@model mvcMovies.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>List Of Movies</h1>

<p>
    <button type="button" class="btn btn-primary btn-lg"><a asp-action="Create" style="color:white; text-decoration:none">Create New</a></button>
</p>
<form asp-controller="Movies" asp-action="Index">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="MovieGenre">Genre</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="inputSearxhString">Movie Title :</label>
            <input type="text" class="form-control" name="SearchString" placeholder="Enter Movie Title Here ...">
        </div>
        <div class="form-group col-md-2">
            <label for="button" style="color:transparent;"> EEE</label>
            <input type="submit" class="form-control" value="Filter"/>
        </div>
    </div>
</form>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1" role="button">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info m-1" role="button">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1" role="button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
