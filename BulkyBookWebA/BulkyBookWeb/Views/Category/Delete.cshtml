@model Category

<form method="post" asp-action="Delete">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text text-primary">Delete Category</h2>
            <hr />
        </div>
       @* <div asp-validation-summary=All></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
@*            <span asp-validation-for="Name" class="text-danger"></span>
*@        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
            @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@

        </div>
        <button type="submit" class="btn-danger btn" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn-secondary btn" style="width:150px">
            Back To List
        </a>
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

